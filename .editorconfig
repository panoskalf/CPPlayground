root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{cpp,c,h,hpp}]
indent_style = space
indent_size = 4

[*.{cmake,CMakeLists.txt}]
indent_style = space
indent_size = 4

[*.{json,jsonc}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
